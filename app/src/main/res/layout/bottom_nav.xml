<!-- res/layout/bottom_nav.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:elevation="8dp">

    <!-- Trang chủ -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home" />
        <TextView
            android:id="@+id/text_home"
            android:text="Trang chủ"
            android:textSize="12sp"
            android:textColor="#333"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_products"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/icon_products"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_all_products" />
        <TextView
            android:id="@+id/text_products"
            android:text="Tất cả"
            android:textSize="12sp"
            android:textColor="#333"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_chat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/icon_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chat" />
        <TextView
            android:id="@+id/text_chat"
            android:text="Chat"
            android:textSize="12sp"
            android:textColor="#333"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_order"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/icon_order"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_package" />
        <TextView
            android:id="@+id/text_order"
            android:text="Đơn hàng"
            android:textSize="12sp"
            android:textColor="#333"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_user" />
        <TextView
            android:id="@+id/text_profile"
            android:text="Tôi"
            android:textSize="12sp"
            android:textColor="#333"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    <!-- Lặp lại nav_products, nav_chat, nav_order, nav_profile -->
</LinearLayout>
