<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/orderDetailActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".OrderDetailActivity">

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/orderDetailScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSupport"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:contentDescription="Quay lại"
                android:scaleType="centerInside"
                android:src="@drawable/icons8_back_100"
                app:tint="#FF5252" />
        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:gravity="center"/>
        </LinearLayout>
        <!-- Mã đơn + ngày đặt -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: #123456"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: 28/06/2025"
            android:textColor="#555555"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Trạng thái đơn hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang giao"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Danh sách sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Một sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#FAFAFA"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/day_chuyen_vang_hong_00a9ab1338"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dây chuyền vàng hồng"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:textColor="#777777"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="₫137.760"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- Tổng tiền -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: ₫137.760"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Phương thức thanh toán -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán: COD (Thanh toán khi nhận hàng)"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Địa chỉ giao hàng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ nhận hàng:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A, 123 Đường ABC, Quận 1, TP.HCM"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Nút liên hệ cố định ở cuối -->
    <Button
        android:id="@+id/btnSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Liên hệ hỗ trợ"
        android:backgroundTint="#FF5722"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textAllCaps="false" />
</RelativeLayout>
